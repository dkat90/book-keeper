<div class="jumbotron text-center">
  <h2 id="title">{{#link-to 'application'}}Simple Book Keeper{{/link-to}}</h2>
  {{#link-to 'books'}}<button class="btn btn-primary">All Books</button>{{/link-to}}
  {{#link-to 'books.new'}}<button class="btn btn-primary">Add new book</button>{{/link-to}}
</div>
{{#if session.isAuthenticated}}
  Logged in as {{session.currentUser.displayName}}
  <button class="btn btn-primary" {{action "signOut"}}>Sign out</button>
  {{outlet}}
{{else}}
<div class="jumbotron text-center">
    <button class="btn btn-primary" {{action "signIn" "google"}}>Sign in with {{fa-icon "google"}}</button>
</div>

{{/if}}
