{{#if session.isAuthenticated}}
{{outlet}}
<h2 id="newBook">Edit Book</h2>
<form>
  <div class="form-group">
    <label for="titleInput">Title</label>
    {{input value=model.title placeholder="Title" class="form-control" id="titleInput"}}
  </div>
  <div class="form-group">
    <label for="authorInput">Author</label>
    {{input value=model.author placeholder="Author" class="form-control" id="authorInput"}}
  </div>
  <div class="form-group">
    <label for="yearInput">Publish Year</label>
    {{input value=model.pubYear placeholder="Publish Year" class="form-control" id="yearInput"}}
  </div>
  <button {{action "saveBook"}} class="btn btn-default">Save</button>
  <button {{action "goBack"}} class="btn btn-default">Cancel</button>
</form>
{{/if}}
